<div class="row">
  <div class="col-md-12">
    <br />
    <h2>Courses</h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>CourseId</th>
            <th>courseCode</th>
            <th>courseDescription</th>
          </tr>
        </thead>
        <tbody>
          {{#each courses}}
            <tr>
              <td>{{courseId}}</td>
              <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
              <td><a
                  href="/students?course={{courseId}}"
                >{{courseDescription}}</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
</div>